<style>
  <% for (const asset of assets) { %>
    :root {
        --<%= asset.contextCode %>: <%= asset.base %>;
    }

    .<%= asset.contextCode %>.google.calendar_event,
    .<%= asset.contextCode %>.google.calendar_event .fc-event-main {
      background: white;
      color: <%= asset.whiteText %>;
      border: <%= asset.base %> solid 1pt;
    }

    .<%= asset.contextCode %>.canvas.planner_item,
    #todo .<%= asset.contextCode %>.item,
    .<%= asset.contextCode %>.canvas.assignment,
    .<%= asset.contextCode %>.google.calendar_event.modal-header {
      background: <%= asset.base %>;
      color: <%= asset.baseText %>;
      border: <%= asset.base %> solid 1pt;
    }

    .<%= asset.contextCode %>.canvas.planner_item.done,
    .<%= asset.contextCode %>.canvas.assignment.done,
    #todo .<%= asset.contextCode %>.item.done {
      background: <%= asset.lighter %>;
      color: <%= asset.lighterText %>;
    }

    .<%= asset.contextCode %> .form-check-input:checked {
      background-color: <%= asset.base %>;
      border-color: <%= asset.base %>;
      color: <%= asset.baseText %>;
    }
  <% } %>
</style>
