<style>
  <% for (const asset of assets) { %>
    :root {
        --<%= asset.context_code %>: <%= asset.base %>;
    }

    .<%= asset.context_code %>.class_meeting,
    .<%= asset.context_code %>.class_meeting .fc-event-main {
      background: white;
      color: <%= asset.whiteText %>;
      border: <%= asset.base %> solid 1pt;
    }

    .<%= asset.context_code %>.planner_item,
    #todo .<%= asset.context_code %>.item,
    <%= asset.context_code %>.assignment,
    <%= asset.context_code %>.class_meeting.modal-header {
      background: <%= asset.base %>;
      color: <%= asset.baseText %>;
      border-color: <%= asset.base %> solid 1px;
    }

    .<%= asset.context_code %>.planner_item.done,
    #todo .<%= asset.context_code %>.item.done {
      background: <%= asset.lighter %>;
      color: <%= asset.lighterText %>;
    }

    .<%= asset.context_code %> .form-check-input:checked {
      background-color: <%= asset.base %>;
      border-color: <%= asset.base %>;
      color: <%= asset.baseText %>;
    }
  <% } %>
</style>
